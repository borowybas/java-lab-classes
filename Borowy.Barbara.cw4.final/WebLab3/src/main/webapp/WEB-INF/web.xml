<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>WelcomeServler</servlet-name>
        <servlet-class>pl.pols.lab.services.WelcomeServler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MenuServlet</servlet-name>
        <servlet-class>pl.pols.lab.services.MenuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddGradeServlet</servlet-name>
        <servlet-class>pl.pols.lab.services.AddGradeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrintGradesServlet</servlet-name>
        <servlet-class>pl.pols.lab.services.PrintGradesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrintServlet</servlet-name>
        <servlet-class>pl.pols.lab.services.PrintServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PersonsServlet</servlet-name>
        <servlet-class>pl.pols.lab.services.PersonsServlet</servlet-class>
    </servlet>    
    <servlet-mapping>
        <servlet-name>WelcomeServler</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MenuServlet</servlet-name>
        <url-pattern>/MenuServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddGradeServlet</servlet-name>
        <url-pattern>/AddGradeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrintGradesServlet</servlet-name>
        <url-pattern>/PrintGradesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrintServlet</servlet-name>
        <url-pattern>/PrintServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PersonsServlet</servlet-name>
        <url-pattern>/persons</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
